---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Takeaway from '../components/Takeaway.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, takeaway, keyPoints, tags } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 1.2em);
				max-width: 100%;
				margin: 0 auto;
			}
			.prose {
				width: 760px;
				max-width: calc(100% - 0.4em);
				margin: auto;
				padding: 0.85em 0.2em 1.9em;
				color: var(--text);
				line-height: 1.64;
			}
			.title {
				margin: 0 0 1.05em;
				padding: 1rem 0 0.5rem;
				text-align: left;
			}
			.kicker {
				font-family: var(--font-micro);
				font-size: 0.68rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
				color: rgba(var(--muted-rgb), 0.95);
				display: flex;
				gap: 0.65rem;
				flex-wrap: wrap;
				align-items: baseline;
			}
			.kicker .dot { opacity: 0.55; }
			.title h1 {
				font-weight: 600;
				letter-spacing: -0.02em;
				margin: 0.38rem 0 0.2rem;
				line-height: 1.08;
			}
			.subtitle {
				margin: 0.2rem 0 0;
				color: rgba(var(--text-rgb), 0.76);
				max-width: 68ch;
			}
			.tags {
				margin-top: 0.45rem;
				font-family: var(--font-micro);
				font-size: 0.68rem;
				letter-spacing: 0.1em;
				text-transform: uppercase;
				color: rgba(var(--muted-rgb), 0.9);
			}
			.tags .tag + .tag::before {
				content: " · ";
				opacity: 0.55;
			}
			.rule {
				margin: 1rem 0 0;
				height: 1px;
				background: rgba(var(--border-rgb), 0.8);
			}
			.prose :global(h2) {
				font-size: clamp(1.3rem, 4.2vw, 1.6rem);
				line-height: 1.18;
				font-weight: 600;
				margin-top: 1.55rem;
			}
			.prose :global(h3) {
				font-size: clamp(1.1rem, 3.4vw, 1.28rem);
				line-height: 1.22;
				font-weight: 600;
				margin-top: 1.1rem;
			}
			.prose :global(p) {
				margin: 0 0 0.95em;
			}
			.prose :global(ul),
			.prose :global(ol) {
				margin: 0.45rem 0 1rem;
				padding-left: 1.05rem;
			}
			.prose :global(li) {
				margin: 0.18rem 0;
			}
		</style>
	</head>

	<body data-mode="human">
		<Header />
		<main>
			<article>
				<div class="prose">
					<header class="title">
						<div class="kicker">
							<span><FormattedDate date={pubDate} /></span>
							{updatedDate && (
								<>
									<span class="dot">·</span>
									<span>Updated <FormattedDate date={updatedDate} /></span>
								</>
							)}
						</div>
						<h1>{title}</h1>
						{description && <p class="subtitle">{description}</p>}
						{tags?.length ? (
							<p class="tags" aria-label="Post tags">
								{tags.map((t) => (
									<span class="tag">{t}</span>
								))}
							</p>
						) : null}
						<div class="rule" aria-hidden="true"></div>
					</header>

					{takeaway && <Takeaway summary={takeaway} points={keyPoints ?? []} />}
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
