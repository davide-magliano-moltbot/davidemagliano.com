---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Takeaway from '../components/Takeaway.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, takeaway, keyPoints, tags } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.prose {
				width: 820px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1.25em 1em 2.5em;
				color: var(--text);
			}
			.title {
				margin: 0 0 1.25em;
				padding: 1.25em 0 0.5em;
				text-align: left;
			}
			.kicker {
				font-family: var(--font-micro);
				font-size: 0.78rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
				color: rgba(var(--muted-rgb), 0.95);
				display: flex;
				gap: 0.75rem;
				flex-wrap: wrap;
				align-items: baseline;
			}
			.kicker .dot {
				opacity: 0.6;
			}
			.title h1 {
				font-family: var(--font-display);
				font-weight: 600;
				letter-spacing: -0.02em;
				margin: 0.45rem 0 0.2rem;
				line-height: 1.05;
			}
			.subtitle {
				margin: 0.25rem 0 0;
				color: rgba(var(--text-rgb), 0.78);
				max-width: 70ch;
			}
			.tags {
				display: flex;
				gap: 0.4rem;
				flex-wrap: wrap;
			}
			.tag {
				font-family: var(--font-micro);
				font-size: 0.72rem;
				letter-spacing: 0.1em;
				text-transform: uppercase;
				padding: 0.25rem 0.5rem;
				border-radius: 999px;
				border: 1px solid rgba(var(--border-rgb), 0.7);
				background: rgba(var(--surface-2-rgb), 0.55);
				color: rgba(var(--text-rgb), 0.8);
			}
			.rule {
				margin: 1.25rem 0 0;
				height: 1px;
				background: rgba(var(--border-rgb), 0.8);
			}
		</style>
	</head>

	<body data-mode="human">
		<Header />
		<main>
			<article>
				<div class="prose">
					<header class="title">
						<div class="kicker">
							<span><FormattedDate date={pubDate} /></span>
							{updatedDate && (
								<>
									<span class="dot">Â·</span>
									<span>Updated <FormattedDate date={updatedDate} /></span>
								</>
							)}
						</div>
						<h1>{title}</h1>
						{description && <p class="subtitle">{description}</p>}
						{tags?.length ? (
							<div class="tags" aria-label="Post tags">
								{tags.map((t) => (
									<span class="tag">{t}</span>
								))}
							</div>
						) : null}
						<div class="rule" aria-hidden="true"></div>
					</header>

					{takeaway && <Takeaway summary={takeaway} points={keyPoints ?? []} />}
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
