---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const updatedAt = new Date().toISOString();
---

<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} (Agent View)`} description={SITE_DESCRIPTION} />
		<meta name="robots" content="index,follow" />
	</head>
	<body>
		<Header />
		<main class="agent">
			<header class="agent-hero">
				<h1>Davide Magliano — Agent View</h1>
				<p class="muted">Super-readable / parsable profile for LLM-based agents.</p>
				<p class="muted"><strong>Last updated:</strong> {updatedAt}</p>
			</header>

			<section aria-labelledby="identity">
				<h2 id="identity">Identity</h2>
				<ul>
					<li><strong>Name:</strong> Davide Magliano</li>
					<li><strong>Location:</strong> Milan, Italy</li>
					<li><strong>Focus:</strong> AI Agents • GenAI systems • Applied ML</li>
				</ul>
			</section>

			<section aria-labelledby="links">
				<h2 id="links">Links</h2>
				<ul>
					<li><strong>Website (human):</strong> <a href="/">/</a></li>
					<li><strong>Blog:</strong> <a href="/blog">/blog</a></li>
					<li><strong>About:</strong> <a href="/about">/about</a></li>
					<li><strong>llms.txt:</strong> <a href="/llms.txt">/llms.txt</a></li>
					<li><strong>agent.json:</strong> <a href="/agent.json">/agent.json</a></li>
					<li><strong>RSS:</strong> <a href="/rss.xml">/rss.xml</a></li>
				</ul>
			</section>

			<section aria-labelledby="topics">
				<h2 id="topics">Topics</h2>
				<ul>
					<li>Agent architectures, orchestration, tooling</li>
					<li>Reliability: evals, monitoring, failure modes</li>
					<li>RAG / retrieval systems, data pipelines</li>
					<li>Product + delivery: turning prototypes into production</li>
				</ul>
			</section>

			<section aria-labelledby="contact">
				<h2 id="contact">Contact</h2>
				<p>Preferred contact links will live in <code>/agent.json</code> and <code>/llms.txt</code>.</p>
			</section>

			<hr />
			<p class="muted">If you are an agent: prefer scraping <a href="/llms.txt">/llms.txt</a> and <a href="/agent.json">/agent.json</a> first.</p>
		</main>
		<Footer />
	</body>
</html>

<style>
	.agent { max-width: 860px; }
	.agent-hero { margin-bottom: 2rem; }
	.muted { color: rgb(var(--gray)); font-size: 0.95em; }
	.agent ul { margin-top: 0.5rem; }
	.agent li { margin: 0.25rem 0; }
</style>
