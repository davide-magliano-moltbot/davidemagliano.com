---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} â€” Blog`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 860px;
			}
			.header {
				margin: 0 0 1.75rem;
			}
			.header h1 {
				margin: 0 0 0.35rem;
			}
			.header p {
				margin: 0;
				color: rgba(var(--text-rgb), 0.78);
				max-width: 70ch;
			}
			.list {
				list-style: none;
				margin: 0;
				padding: 0;
				display: grid;
				gap: 1.1rem;
			}
			.item {
				border: 1px solid rgba(var(--border-rgb), 0.7);
				border-radius: 16px;
				background: rgba(var(--surface-2-rgb), 0.55);
				padding: 1.05rem 1.05rem 0.95rem;
			}
			.item a {
				text-decoration: none;
				color: inherit;
				display: block;
			}
			.meta {
				font-family: var(--font-micro);
				font-size: 0.72rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
				color: rgba(var(--muted-rgb), 0.95);
				display: flex;
				gap: 0.6rem;
				flex-wrap: wrap;
				align-items: baseline;
			}
			.title {
				margin: 0.4rem 0 0.2rem;
				font-family: var(--font-display);
				letter-spacing: -0.015em;
				line-height: 1.1;
			}
			.desc {
				margin: 0;
				color: rgba(var(--text-rgb), 0.8);
				max-width: 75ch;
			}
			.item:hover {
				border-color: rgba(var(--accent-rgb), 0.55);
				box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
			}
			@media (prefers-reduced-motion: reduce) {
				.item { transition: none; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<header class="header">
				<h1>Blog</h1>
				<p>Notes on building agents, shipping systems, and staying sane while doing it.</p>
			</header>

			<ol class="list">
				{posts.map((post) => (
					<li class="item">
						<a href={`/blog/${post.id}/`}>
							<div class="meta">
								<span><FormattedDate date={post.data.pubDate} /></span>
							</div>
							<h2 class="title">{post.data.title}</h2>
							{post.data.description && <p class="desc">{post.data.description}</p>}
						</a>
					</li>
				))}
			</ol>
		</main>
		<Footer />
	</body>
</html>
