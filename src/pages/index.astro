---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const latest = posts[0];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				padding: 1rem 0 1.1rem;
			}
			.hero h1 {
				margin: 0 0 0.45rem;
				line-height: 1.08;
				max-width: 19ch;
			}
			.hero p {
				margin: 0;
				max-width: 68ch;
				color: rgba(var(--text-rgb), 0.8);
			}
			.quick-links {
				margin-top: 0.75rem;
				font-family: var(--font-micro);
				font-size: 0.72rem;
				letter-spacing: 0.11em;
				text-transform: uppercase;
				color: rgba(var(--muted-rgb), 0.95);
			}
			.quick-links a {
				text-decoration: none;
			}
			.quick-links .sep {
				margin: 0 0.42rem;
				opacity: 0.45;
			}
			.latest {
				margin-top: 1.15rem;
				padding-top: 0.9rem;
				border-top: 1px solid rgba(var(--border-rgb), 0.85);
			}
			.latest-label {
				margin: 0;
				font-family: var(--font-micro);
				font-size: 0.68rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
				color: rgba(var(--muted-rgb), 0.92);
			}
			.latest h2 {
				margin: 0.38rem 0 0.24rem;
				font-size: 1.16rem;
				line-height: 1.24;
			}
			.latest h2 a {
				text-decoration: none;
				color: var(--text-strong);
			}
			.latest p {
				margin: 0;
				color: rgba(var(--text-rgb), 0.75);
			}
			.latest .meta {
				margin-top: 0.34rem;
				font-size: 0.88rem;
				color: rgba(var(--text-rgb), 0.6);
			}
		</style>
	</head>
	<body data-mode="human">
		<Header />
		<main>
			<section class="hero">
				<h1>Notes on AI agents, systems, and shipping.</h1>
				<p>A personal site built from chat-first execution with OpenClaw.</p>
				<p class="quick-links">
					<a href="/blog">Blog</a><span class="sep">/</span><a href="/about">About</a><span class="sep">/</span><a href="/agent">Agent view</a>
				</p>
			</section>

			{latest && (
				<section class="latest" aria-label="Latest post">
					<p class="latest-label">Latest</p>
					<h2><a href={`/blog/${latest.id}/`}>{latest.data.title}</a></h2>
					{latest.data.description && <p>{latest.data.description}</p>}
					<p class="meta"><FormattedDate date={latest.data.pubDate} /></p>
				</section>
			)}
		</main>
		<Footer />
	</body>
</html>
