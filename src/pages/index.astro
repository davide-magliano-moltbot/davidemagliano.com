---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const latest = posts[0];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 860px;
			}
			.hero {
				padding: 1.25rem 0 1.5rem;
			}
			.hero h1 {
				margin: 0 0 0.6rem;
				font-family: var(--font-display);
				letter-spacing: -0.02em;
				line-height: 1.05;
			}
			.hero p {
				margin: 0.35rem 0 0;
				color: rgba(var(--text-rgb), 0.82);
				max-width: 75ch;
			}
			.hero .sub {
				color: rgba(var(--text-rgb), 0.72);
			}
			.card {
				margin-top: 1.5rem;
				border: 1px solid rgba(var(--border-rgb), 0.7);
				border-radius: 18px;
				background: rgba(var(--surface-2-rgb), 0.55);
				padding: 1.15rem 1.15rem 1.05rem;
			}
			.kicker {
				font-family: var(--font-micro);
				font-size: 0.72rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
				color: rgba(var(--muted-rgb), 0.95);
			}
			.card h2 {
				margin: 0.5rem 0 0.3rem;
				font-size: 1.6rem;
			}
			.card p {
				margin: 0;
				color: rgba(var(--text-rgb), 0.8);
				max-width: 75ch;
			}
			.card .meta {
				margin-top: 0.65rem;
				color: rgba(var(--text-rgb), 0.65);
				font-size: 0.95rem;
			}
			.card a {
				text-decoration: none;
			}
			.links {
				margin-top: 1.2rem;
				display: flex;
				gap: 0.8rem;
				flex-wrap: wrap;
			}
			.links a {
				font-family: var(--font-micro);
				font-size: 0.72rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
				padding: 0.45rem 0.7rem;
				border-radius: 999px;
				border: 1px solid rgba(var(--border-rgb), 0.7);
				background: transparent;
				color: rgba(var(--text-rgb), 0.82);
				text-decoration: none;
			}
			.links a:hover {
				border-color: rgba(var(--accent-rgb), 0.65);
				color: var(--accent);
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Hey — I’m Davide.</h1>
				<p class="sub">A small personal site for notes on agents, systems, and shipping.</p>
				<p>Readable for humans by default. There’s also an agent view via the header toggle.</p>

				<nav class="links" aria-label="Quick links">
					<a href="/blog">Read</a>
					<a href="/about">About</a>
					<a href="/agent">Agent view</a>
				</nav>
			</section>

			{latest && (
				<section class="card" aria-label="Latest post">
					<div class="kicker">Latest</div>
					<h2><a href={`/blog/${latest.id}/`}>{latest.data.title}</a></h2>
					{latest.data.description && <p>{latest.data.description}</p>}
					<p class="meta"><FormattedDate date={latest.data.pubDate} /></p>
				</section>
			)}
		</main>
		<Footer />
	</body>
</html>
