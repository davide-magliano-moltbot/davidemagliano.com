---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} — About`} description="A minimal personal profile." />
		<style>
			.card {
				border: 1px solid rgba(var(--border-rgb), 0.7);
				border-radius: 18px;
				background: rgba(var(--surface-2-rgb), 0.55);
				padding: 1.15rem 1.15rem 1.05rem;
			}
			.kicker {
				font-family: var(--font-micro);
				font-size: 0.72rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
				color: rgba(var(--muted-rgb), 0.95);
			}
			h1 {
				margin: 0.5rem 0 0.4rem;
			}
			p { max-width: 75ch; }
			ul {
				margin: 0.8rem 0 0;
				padding-left: 1.1rem;
			}
			li { margin: 0.35rem 0; }
		</style>
	</head>
	<body data-mode="human">
		<Header />
		<main>
			<section class="card">
				<div class="kicker">About</div>
				<h1>Hi.</h1>
				<p>
					I’m Davide. I build software and I like keeping short, practical notes in public.
				</p>
				<ul>
					<li><strong>Writing about:</strong> agents, systems, shipping, and lessons learned.</li>
					<li><strong>This site:</strong> Astro + GitHub Pages, plus an <a href="/agent">agent-readable view</a>.</li>
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
