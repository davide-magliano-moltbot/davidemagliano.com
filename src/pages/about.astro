---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} — About`} description="A minimal personal profile." />
		<style>
			.header {
				margin: 0 0 0.9rem;
			}
			.header h1 {
				margin: 0 0 0.35rem;
			}
			.header p {
				margin: 0;
				max-width: 68ch;
				color: rgba(var(--text-rgb), 0.78);
			}
			.list {
				margin: 0.8rem 0 0;
				padding: 0.85rem 0 0;
				border-top: 1px solid rgba(var(--border-rgb), 0.8);
				padding-left: 1.05rem;
			}
			.list li {
				margin: 0.28rem 0;
			}
		</style>
	</head>
	<body data-mode="human">
		<Header />
		<main>
			<header class="header">
				<h1>About</h1>
				<p>I’m Davide. I build software and keep practical notes in public.</p>
			</header>
			<ul class="list">
				<li><strong>Writing about:</strong> agents, systems, shipping, and lessons learned.</li>
				<li><strong>This site:</strong> Astro + GitHub Pages, plus an <a href="/agent">agent-readable view</a>.</li>
			</ul>
		</main>
		<Footer />
	</body>
</html>
