---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';

const pathname = Astro.url?.pathname ?? '/';
const isAgent = pathname.startsWith('/agent');
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="mode">
			<span class="mode-label">View:</span>
			<div class="mode-toggle" role="group" aria-label="Select view mode">
			<a class:list={["mode-btn", !isAgent && "active"].filter(Boolean)} href="/">
				<span class="mode-long">I am a human</span>
				<span class="mode-short" aria-hidden="true">Human</span>
			</a>
			<a class:list={["mode-btn", isAgent && "active"].filter(Boolean)} href="/agent">
				<span class="mode-long">I am an agent</span>
				<span class="mode-short" aria-hidden="true">Agent</span>
			</a>
		</div>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--surface);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		overflow-x: clip;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--text-strong);
	}
	h2 a:hover {
		color: var(--accent);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 0.75rem 1rem;
		flex-wrap: wrap;
	}
	.internal-links {
		display: flex;
		flex-wrap: wrap;
		max-width: 100%;
	}
	.mode {
		max-width: 100%;
		min-width: 0;
	}
	.mode-toggle {
		max-width: 100%;
		min-width: 0;
		flex-wrap: wrap;
	}
	.internal-links a {
		padding: 0.9em 0.5em;
		color: var(--text-strong);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	.internal-links a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	.mode {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.mode-label {
		font-size: 0.85em;
		color: rgba(var(--muted-rgb), 0.95);
	}
	.mode-toggle {
		display: inline-flex;
		border: 1px solid rgba(var(--border-rgb), 0.8);
		border-radius: 999px;
		overflow: hidden;
		background: rgba(var(--surface-2-rgb), 0.55);
	}
	.mode-toggle a {
		padding: 0.45rem 0.7rem;
		font-size: 0.82em;
		border-bottom: 0;
		text-decoration: none;
		color: rgba(var(--text-rgb), 0.86);
		white-space: nowrap;
		min-width: 0;
		transition: background 160ms ease, color 160ms ease;
	}
	.mode-short {
		display: none;
	}
	.mode-toggle a.active {
		/* Keep the state obvious without washing the header in blue */
		background: rgba(var(--text-rgb), 0.06);
		color: var(--text-strong);
	}
	.mode-toggle a:focus-visible {
		outline: 2px solid rgba(var(--accent-rgb), 0.7);
		outline-offset: 2px;
	}

	/* Agent mode: make the whole header feel utilitarian and minimal */
	:global(body[data-mode="agent"]) header {
		box-shadow: none;
		border-bottom: 1px solid rgba(var(--border-rgb), 0.65);
	}
	:global(body[data-mode="agent"]) .internal-links {
		display: none;
	}
	:global(body[data-mode="agent"]) .mode-toggle {
		background: transparent;
		border-color: rgba(var(--border-rgb), 0.55);
	}
	:global(body[data-mode="agent"]) .mode-toggle a.active {
		background: transparent;
		color: var(--accent);
		box-shadow: inset 0 -2px 0 rgba(var(--accent-rgb), 0.9);
	}
	@media (max-width: 720px) {
		header {
			padding: 0 0.6em;
		}
		/* Make the header feel intentional on mobile:
		   title (left) + mode toggle (right), then nav links */
		nav {
			display: grid;
			grid-template-columns: 1fr auto;
			align-items: center;
			justify-content: initial;
			gap: 0.5rem 0.75rem;
		}
		h2 {
			grid-column: 1;
		}
		.mode {
			grid-column: 2;
			justify-self: end;
			width: auto;
		}
		.internal-links {
			grid-column: 1 / -1;
			width: 100%;
		}
		.internal-links a {
			padding: 0.75em 0.45em;
		}
		.mode-toggle {
			width: auto;
			display: inline-flex;
		}
		.mode-label {
			display: none;
		}
		.mode-toggle a {
			padding: 0.42rem 0.55rem;
			font-size: 0.8em;
		}
		.mode-long {
			display: none;
		}
		.mode-short {
			display: inline;
		}
	}
</style>
