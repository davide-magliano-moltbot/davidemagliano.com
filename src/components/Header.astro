---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 0.65em;
		background: var(--surface);
		border-bottom: 1px solid rgba(var(--border-rgb), 0.85);
		overflow-x: clip;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 0.55rem 1rem;
		flex-wrap: wrap;
		min-height: 48px;
	}
	h2 {
		margin: 0;
		font-size: 0.95rem;
		font-weight: 600;
		min-width: 0;
	}
	h2 a,
	h2 a.active {
		display: block;
		max-width: 100%;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		text-decoration: none;
		color: var(--text-strong);
	}
	.internal-links {
		display: flex;
		gap: 0.35rem;
		flex-wrap: wrap;
		max-width: 100%;
	}
	.internal-links a {
		padding: 0.55rem 0.35rem;
		font-family: var(--font-micro);
		font-size: 0.7rem;
		letter-spacing: 0.11em;
		text-transform: uppercase;
		text-decoration: none;
		color: rgba(var(--text-rgb), 0.72);
	}
	.internal-links a.active {
		color: var(--text-strong);
		text-decoration: underline;
		text-decoration-thickness: 1.5px;
		text-underline-offset: 0.24em;
		text-decoration-color: rgba(var(--accent-rgb), 0.6);
	}

	@media (max-width: 720px) {
		header {
			padding-left: max(0.45em, env(safe-area-inset-left));
			padding-right: max(0.45em, env(safe-area-inset-right));
		}
		nav {
			display: grid;
			grid-template-columns: minmax(0, 1fr);
			align-items: center;
			gap: 0.35rem 0.65rem;
		}
		h2 {
			grid-column: 1;
		}
		.internal-links {
			grid-column: 1;
			width: 100%;
			gap: 0.2rem 0.3rem;
		}
		.internal-links a {
			font-size: 0.69rem;
			padding: 0.45rem 0.3rem;
		}
	}
</style>
