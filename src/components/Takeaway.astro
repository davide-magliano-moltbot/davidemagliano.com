---
const { title = 'TAKEAWAY', summary, points = [] } = Astro.props;
---

<aside class="takeaway" aria-label="Post takeaway">
	<div class="takeaway__kicker">{title}</div>
	{summary && <p class="takeaway__summary"><strong>{summary}</strong></p>}
	{points?.length ? (
		<ul class="takeaway__points">
			{points.map((p) => (
				<li>{p}</li>
			))}
		</ul>
	) : null}
</aside>

<style>
	.takeaway {
		margin: 1rem 0 1.6rem;
		padding: 0.25rem 0 0.15rem 0.9rem;
		border-left: 2px solid rgba(var(--accent-rgb), 0.58);
		background: transparent;
	}
	.takeaway__kicker {
		font-family: var(--font-micro);
		font-size: 0.68rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: rgba(var(--muted-rgb), 0.9);
		margin-bottom: 0.35rem;
	}
	.takeaway__summary {
		margin: 0 0 0.5rem;
		font-size: 0.98rem;
		line-height: 1.58;
		color: var(--text);
	}
	.takeaway__points {
		margin: 0;
		padding-left: 1rem;
		color: rgba(var(--text-rgb), 0.9);
	}
	.takeaway__points li {
		margin: 0.24rem 0;
	}
</style>
